# Supabase Environment Variables Template
# Copy this file to .env.supabase and fill in your actual values

# Supabase Project Configuration
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Connections
# Pooled connection (recommended for serverless/production)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:6543/postgres?pgbouncer=true

# Direct connection (for migrations and admin tasks)
DIRECT_DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres

# Application Settings
NODE_ENV=production
PORT=5000

# Frontend URL (update based on your deployment)
VITE_API_URL=https://your-app-domain.com/api

# Optional: Supabase Realtime
SUPABASE_REALTIME_ENABLED=false

# Optional: Supabase Storage
SUPABASE_STORAGE_BUCKET=cruise-images