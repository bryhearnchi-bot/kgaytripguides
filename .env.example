# K-GAY Travel Guides - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL database connection URL from Supabase
# Format: postgresql://postgres:PASSWORD@db.PROJECT_ID.supabase.co:6543/postgres
DATABASE_URL=

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Supabase Project URL (https://PROJECT_ID.supabase.co)
SUPABASE_URL=

# Supabase Service Role Key (JWT token for server-side operations)
# ⚠️ NEVER expose this to the client - server-side ONLY
SUPABASE_SERVICE_ROLE_KEY=

# Supabase Anonymous Key (safe for client-side use)
VITE_SUPABASE_ANON_KEY=

# Supabase URL for client-side (same as SUPABASE_URL)
VITE_SUPABASE_URL=

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Environment: development, staging, or production
NODE_ENV=development

# Server port (default: 3001)
PORT=3001

# API URL for client-side requests
VITE_API_URL=http://localhost:3001

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Session secret for JWT signing (generate with: openssl rand -base64 32)
SESSION_SECRET=

# JWT expiration time (default: 7d for 7 days)
JWT_EXPIRES_IN=7d

# ============================================
# OPTIONAL CONFIGURATION
# ============================================
# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Enable/disable request logging (default: true)
REQUEST_LOGGING=true

# CORS allowed origins (comma-separated, default: *)
CORS_ORIGINS=*

# ============================================
# PRODUCTION-ONLY VARIABLES
# ============================================
# These are automatically set by Railway in production
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=
# RAILWAY_SERVICE_ID=

# ============================================
# NOTES
# ============================================
# 1. Never commit .env to git (it's in .gitignore)
# 2. Use strong, unique values for secrets
# 3. Rotate credentials regularly
# 4. Keep development and production credentials separate
# 5. Use Railway environment variables in production (not .env file)