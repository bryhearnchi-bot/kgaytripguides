# Database Configuration
DATABASE_URL=your_database_url_here

# Supabase Configuration (Required for client-side authentication)
# These are PUBLIC keys that are safe to expose in the browser
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Environment
NODE_ENV=development

# Optional: Mock data for testing (set to true to use test data)
USE_MOCK_DATA=false

# Image Storage (Cloudinary) - Optional, images now stored in Supabase
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Session Secret
SESSION_SECRET=your_session_secret_here