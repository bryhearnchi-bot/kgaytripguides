# Database Configuration
DATABASE_URL=your_database_url_here

# Supabase Configuration (Required for client-side authentication)
# These are PUBLIC keys that are safe to expose in the browser
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Environment
NODE_ENV=development

# Optional: Mock data for testing (set to true to use test data)
USE_MOCK_DATA=false

# Supabase Service Role Key (Required for server-side operations)
# This key should NEVER be exposed to the client
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Session Secret
SESSION_SECRET=your_session_secret_here